@inherits LayoutComponentBase

<PageTitle>BlazorBlog</PageTitle>


<MApp Id="inspire">
    <MNavigationDrawer @bind-Value="_drawer"
                       App>
        <NavMenu />
    </MNavigationDrawer>

    <MAppBar App>
        <MAppBarNavIcon @onclick="()=>_drawer = !_drawer"></MAppBarNavIcon>

        <MToolbarTitle>Application</MToolbarTitle>
    </MAppBar>

    <MMain>
        @Body
    </MMain>
</MApp>

@code {
    bool _drawer;
}
